<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- 5 square buttons aligned in a row -->
    <LinearLayout
        android:id="@+id/button_row"
        android:layout_width="400dp"
        android:layout_height="80dp"
        android:layout_gravity="bottom"
        android:background="@drawable/azultilescrop"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="0dp"
        app:layout_constraintBottom_toTopOf="@+id/confirm_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/button_blue"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:contentDescription="@string/blue_button"
            android:scaleType="fitCenter"
            android:visibility="visible"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/button_yellow"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:contentDescription="@string/yellow_button"
            android:scaleType="fitCenter"
            android:visibility="visible" />

        <Button
            android:id="@+id/button_red"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:contentDescription="@string/red_button"
            android:scaleType="fitCenter"
            android:visibility="visible" />

        <Button
            android:id="@+id/button_black"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:contentDescription="@string/black_button"
            android:scaleType="fitCenter"
            android:visibility="visible" />

        <Button
            android:id="@+id/button_white"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:contentDescription="@string/white_button"
            android:scaleType="fitCenter"
            android:visibility="visible" />
    </LinearLayout>

    <!-- Confirm button -->
    <Button
        android:id="@+id/confirm_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="16dp"
        android:text="@string/confirm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
